<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="GoogleAppIndexingWarning"
    package="io.snabble.testapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/SnabbleTheme"
        android:supportsRtl="true">
        <activity android:name="io.snabble.testapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SelfScanningActivity" />
        <activity android:name=".ProductSearchActivity" />
        <activity android:name=".ShoppingCartActivity" />
        <activity android:name=".SEPACardInputActivity" />
        <activity android:name=".CreditCardInputActivity" />
        <activity android:name=".PaymentCredentialsListActivity" />
        <activity android:name=".PaymentCredentialsSelectActivity" />
        <activity android:name=".CheckoutQRCodeOfflineActivity" />
        <activity android:name=".CheckoutGatekeeperActivity" />
        <activity android:name=".CheckoutOnlineActivity" />
        <activity android:name=".CheckoutQRCodePOSActivity" />
        <activity android:name=".PaymentSelectionActivity" />
        <activity android:name=".PaymentFailureActivity" />
        <activity android:name=".PaymentSuccessActivity" />
    </application>
</manifest>
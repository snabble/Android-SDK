<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextAppearance.Snabble.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="TextAppearance.Snabble.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="lineHeight">20.4sp</item>
    </style>

    <style name="TextAppearance.Snabble.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:letterSpacing">0</item>
        <item name="lineHeight">16.8sp</item>
    </style>

    <style name="TextAppearance.Snabble.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Snabble.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="LoadingTheme" parent="@style/AppTheme">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowBackground">@drawable/loading</item>
    </style>

    <style name="BottomSheetCardViewStyle" parent="DefaultBottomSheetCardViewStyle">
        <item name="cardBackgroundColor">?attr/colorSurfaceVariant</item>
    </style>
</resources>

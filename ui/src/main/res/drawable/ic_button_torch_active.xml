<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <size
                android:height="48dp"
                android:width="48dp" />
            <solid android:color="#ffffff" />
            <stroke
                android:color="#fafafa"
                android:width="1dp" />
        </shape>
    </item>

    <item android:bottom="12dp"
        android:left="12dp"
        android:right="12dp"
        android:top="12dp">
        <bitmap android:src="@drawable/ic_torch_active"
            android:tint="@color/snabble_primaryColor"/>
    </item>
</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight">
    <item android:id="@android:id/mask">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="4dp" />
                    <size
                        android:width="48dp"
                        android:height="48dp" />
                    <solid android:color="#000000" />
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="4dp" />
                    <size
                        android:width="48dp"
                        android:height="48dp" />
                    <stroke
                        android:width="1dp"
                        android:color="?attr/colorOnSurface" />
                    <solid android:color="?attr/colorOnSurface" />
                    <padding
                        android:bottom="12dp"
                        android:left="12dp"
                        android:right="12dp"
                        android:top="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
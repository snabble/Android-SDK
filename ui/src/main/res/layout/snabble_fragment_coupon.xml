<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:importantForAccessibility="no"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:padding="32dp"
            tools:src="@drawable/snabble_ic_gift"
            tools:background="?colorPrimary" />

        <TextView
            style="@style/TextAppearance.Material3.HeadlineMedium"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="24dp"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:layout_weight="700"
            tools:text="Reishunger Medjool Datteln Bio" />

        <TextView
            style="@style/TextAppearance.Material3.BodyLarge"
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:padding="8dp"
            tools:text="Gültig für eine Packung" />

        <TextView
            style="@style/TextAppearance.Material3.BodyMedium"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="-8dp"
            android:layout_marginBottom="24dp"
            android:padding="8dp"
            tools:text="Disclaimer ipsum dolor sit amet, consectetur adipiscing elit. Nulla venenatis aliquet sem et interdum. Suspendisse potenti. " />

        <TextView
            style="@style/TextAppearance.Material3.TitleMedium"
            android:id="@+id/discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:padding="8dp"
            android:textStyle="bold"
            tools:text="2,95 € statt 3,95 €" />

        <TextView
            android:id="@+id/expire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="-8dp"
            android:padding="8dp"
            tools:text="gültig bis 31.12.2022" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/redeemForScanGo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="16dp"
            android:text="@string/Snabble.Coupon.activate" />
    </LinearLayout>
</ScrollView>
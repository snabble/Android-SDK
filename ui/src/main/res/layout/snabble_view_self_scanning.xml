<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="androidx.coordinatorlayout.widget.CoordinatorLayout">

    <io.snabble.sdk.ui.scanner.BarcodeScannerView
        android:id="@+id/barcode_scanner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="@string/Snabble.Scanner.Camera.accessDenied"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:id="@+id/no_permission"
        android:gravity="center"
        android:textStyle="bold"
        android:background="?android:attr/colorBackground"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:id="@+id/bottom_bar">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/snabble_ic_button_outlined_48dp"
            android:src="@drawable/snabble_ic_search"
            android:padding="12dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:id="@+id/enter_barcode" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/snabble_ic_button_outlined_48dp"
            android:src="@drawable/snabble_ic_torch"
            android:padding="12dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:id="@+id/light" />

        <Button
            android:id="@+id/goto_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeMaxTextSize="14sp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetLeft="0dp"
            android:insetBottom="0dp"
            android:text="@string/Snabble.Scanner.goToCart.empty"
            tools:text="Warenkorb: 99,99 â‚¬"/>
    </LinearLayout>
</merge>
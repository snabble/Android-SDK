<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    tools:ignore="RtlHardcoded">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/anchor" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@+id/anchor"
        android:visibility="gone"
        android:id="@+id/image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="12dp"
        android:layout_toRightOf="@+id/image"
        android:layout_toLeftOf="@+id/controls"
        android:textColor="@color/snabble_textColorDark"
        android:id="@+id/subtitle"
        tools:text="Wiha"
        tools:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/image"
        android:layout_toLeftOf="@+id/controls"
        android:layout_below="@+id/subtitle"
        android:textSize="17dp"
        android:textColor="@color/snabble_textColorDark"
        android:id="@+id/name"
        tools:text="Schraubendreher Top G" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/image"
        android:layout_toLeftOf="@+id/controls"
        android:layout_below="@+id/name"
        android:id="@+id/price_container"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quantity"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_round_textview"
            app:backgroundTint="@color/snabble_primaryColor"
            android:textSize="12dp"
            android:textColor="@color/snabble_textColorLight"
            android:textStyle="bold"
            tools:text="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/snabble_textColorDark"
            android:id="@+id/price"
            tools:text=" * 13,99 € = 26,98 €" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/controls">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/controls_default"
            android:orientation="horizontal"
            tools:visibility="gone">

            <ImageView
                android:id="@+id/minus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_button_minus" />

            <ImageView
                android:id="@+id/plus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_button_plus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/controls_user_weighed"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/SnabbleEditText"
                android:id="@+id/quantity_edit"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_marginRight="4dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="right|center_vertical"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:textSize="15dp"
                android:text="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/quantity_annotation"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:gravity="left"
                android:text="g"
                android:textColor="@color/snabble_textColorDark"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/quantity_edit_apply"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_button_check"
                tools:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>